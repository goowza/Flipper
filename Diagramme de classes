@startuml

title Relationships - Class Diagram


class PinBall {
    +int nbTry
    +void startGame()
    +void loopGame()
    +void stopGame()
    +int getNbTry()
}

class Player {
    +int score
    +void addScore(int add)
}

class BallDetector {
    +int treshold
    +BallDetector()
    +bool isDetected()
    +void setTreshold(int treshold)
    +int getSensorValue()
    +~BallDetector()
}

class Flipper {
    Flipper()
}

class Buzzer {
    +void playPWM(float duty_cycle)
}

class Screen {
    +void afficherScore()
}

class LED {
    LED()
}

class AnalogSensor {
    +mraa_aio_context aio_context
    +AnalogSensor(int pin)
    +int getSensorValue()
}

class DigitalActuator {
    +mraa_gpio_context gpio_context
    +int state
    +DigitalActuator(int pin)
    +void setHigh()
    +void setLow()
    +int getState()
}

class PWMActuator {
    +mraa_pwm_context pwm_context
    +float duty_cycle
    +PWMActuator(int pin)
}

AnalogSensor <|-down- BallDetector
DigitalActuator <|-down- LED
DigitalActuator <|-down- Flipper
PWMActuator <|-down- Buzzer


PinBall "1" *-up- "2" BallDetector
PinBall "1" *-up- "2" Flipper
PinBall "1" *-up- "1" Buzzer
PinBall "1" *-up- "1" Screen
PinBall "1" *-up- "1" Player
PinBall "1" *-up- "*" LED

@enduml
